<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tutorial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tutorial">

        <activity
            android:name="com.example.tutorial.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.tutorial.activities.DatabaseActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".DatabaseActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.tutorial.activities.CreatedActivity"
            android:exported="false" />

        <activity
            android:name="com.example.tutorial.activities.RecyclerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".RecyclerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.tutorial.activities.CalculatorActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".CalculatorActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.tutorial.activities.CircleActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".CircleActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.tutorial.activities.DrawingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".DrawingActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.tutorial.activities.FragmentActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".FragmentActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.tutorial.activities.SensorActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".SensorActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.tutorial.activities.FileActivity"
            android:exported="true">
            <intent-filter>
                <action android:name=".FileActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <provider
            android:name="com.example.tutorial.db.NotesProvider"
            android:authorities="com.example.tutorial.provider"
            android:exported="false" />
    </application>

</manifest>